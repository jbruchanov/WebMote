<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.scurab.web.remotecontrol.client.controls" xmlns:p1="urn:import:com.scurab.web.remotecontrol.client.view.keyboard">
	<ui:with type="com.scurab.web.remotecontrol.language.Words"	
		field="res"></ui:with>
	<ui:style>
		.topPanel {
			margin-top: 5px;
			margin-bottom: 15px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel width="100%" styleName="{style.topPanel}">
			<g:Button width="100%" height="40px" text="{res.Default}" ui:field="btnDefault" />
			<g:Button width="100%" height="40px" text="{res.Special}" ui:field="btnSpecial" />
			<g:Button width="100%" height="40px" text="{res.Arrows}" ui:field="btnArrows" />
			<g:Button width="100%" height="40px" text="{res.Numeric}" ui:field="btnNumeric" />
			<g:Button width="100%" height="40px" text="{res.Functional}" ui:field="btnFunctional" />
			<g:Button width="100%" height="40px" text="{res.Media}" ui:field="btnMedia" />
		</g:HorizontalPanel>
		<p1:DefaultKeyboard ui:field="defaultKeyboard"/>
		<p1:ShiftKeyboard ui:field="shiftKeyboard"/>
		<p1:SpecialKeyboard ui:field="specialKeyboard"/>
		<p1:ArrowsKeyboard ui:field="arrowsKeyboard" />
		<p1:FunctionalKeyboard ui:field="funcKeyboard"/>
		<p1:MediaKeyboard ui:field="mediaKeyboard" />
		<p1:NumericKeyboard ui:field="numericKeyboard" />
	</g:HTMLPanel>
</ui:UiBinder> 