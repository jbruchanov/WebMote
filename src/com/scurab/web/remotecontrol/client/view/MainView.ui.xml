<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p1="urn:import:com.scurab.web.remotecontrol.client.controls">
	<ui:style>
	.container
	{
		background-color: #d0d0d0;
		padding: 15px;
		padding-left: 30px;
		padding-right: 30px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.container}">
		<g:FlowPanel width="100%">
			<g:Grid >
			<g:row>
				<g:customCell>
					<p1:ImageMobileButton altText="tv" url="pics/ic_main_tv.png" ui:field="btnTV"/>
				</g:customCell>
				<g:customCell>
					<p1:ImageMobileButton altText="vp" url="pics/ic_main_videoplayer.png" ui:field="btnVideo"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<p1:ImageMobileButton altText="ap" url="pics/ic_main_audioplayer.png" ui:field="btnAudio"/>
				</g:customCell>
				<g:customCell>
					<p1:ImageMobileButton altText="pv" url="pics/ic_main_pictures.png" ui:field="btnPictures"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<p1:ImageMobileButton altText="v" url="pics/ic_main_volume.png" ui:field="btnVolume"/> 
				</g:customCell>
				<g:customCell>
					<p1:ImageMobileButton altText="f" url="pics/ic_main_harddisk.png" ui:field="btnFileBrowser"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<p1:ImageMobileButton altText="mc" url="pics/ic_main_config.png" ui:field="btnConfig"/>
				</g:customCell>
				<g:customCell>
					<p1:ImageMobileButton altText="BBB" url="pics/ic_main_next.png" ui:field="btnNext"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 