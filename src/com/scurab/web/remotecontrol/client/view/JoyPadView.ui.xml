<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p1="urn:import:com.scurab.web.remotecontrol.client.controls" xmlns:p2="urn:import:com.scurab.web.remotecontrol.client.view">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
			<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
					<p1:ImageMobileButton url="pics/btn_default_control.png" ui:field="btnDefault"/>
					<p1:ImageMobileButton url="pics/btn_audio_config.png" command="0x1B" ui:field="btnEscape" />
					<p1:ImageMobileButton url="pics/btn_space.png" command="0x20" ui:field="btnSpace" />
					<p1:ImageMobileButton url="pics/btn_user.png" ui:field="btnUser"/>
			</g:HorizontalPanel>
			<p2:JoyPad ui:field="joyPad"/>
		</g:VerticalPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 