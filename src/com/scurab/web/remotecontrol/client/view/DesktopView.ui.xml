<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.scurab.web.remotecontrol.client.controls">
	<ui:with type="com.scurab.web.remotecontrol.language.Keys" field="kc"/>
	<ui:style>
	</ui:style>
	<g:HTMLPanel ui:field="container" width="100%">
		<g:HorizontalPanel ui:field="topPanel" width="90%" height="50px" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" >
			<g:Cell width="">
				<g:ToggleButton text="On/Off" width="50px" ui:field="tglOnOff" height="35px"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<my:CommandButton width="90%" ui:field="btnLeft" text="Left" height="40px" command="VK_LBUTTON"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<my:CommandButton width="90%" ui:field="btnEscape" text="Escape" height="40px" command="{kc.KEY_ESCAPE}"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<my:CommandButton width="90%" text="Right" ui:field="btnRight" height="40px" command="VK_RBUTTON"/>
			</g:Cell>
		</g:HorizontalPanel>
			<g:Image width="100%" height="100%" ui:field="image"/>
	</g:HTMLPanel>
</ui:UiBinder> 