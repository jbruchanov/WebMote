<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label
		{
			color: #DDD;
		}
		
		.containers
		{
			position: absolute;
		}
		
		.pointer
		{
			position: absolute;
			left:178px;
			top:65px;	
		}
		.volumeLabel
		{			
			position: absolute;
			width: 300px;
			text-align: center;
			top:110px;
			font-size: 4em;
			font-family: verdana;			
			color: #FFF;
			text-shadow: 2px 2px 2px #000;		
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.containers} unselectable">			
		<g:Image url="volumebckrnd.png" ui:field="imgBackground" styleName="{style.containers} unselectable" />
		<g:Image url="volumecontrol.png" styleName="{style.pointer}" ui:field="imgPointer" width="28px" height="28px" />
		<g:Label text="New Label" ui:field="lblInfo" styleName="{style.label} unselectable"/>
		<g:Label text="0" ui:field="lblVolume" styleName="{style.volumeLabel} unselectable"/>
	</g:HTMLPanel>
</ui:UiBinder>