<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:com.scurab.web.remotecontrol.client.controls">
	<ui:with type="com.scurab.web.remotecontrol.language.Words" field="res"/>
	<ui:with type="com.scurab.web.remotecontrol.language.Keys" field="kc"/>
	<ui:style>
		.key {
			font-family: Lucida Console;
			font-size: 1.2em;
			min-width: 50px;
		}
		
		.row0 {
			height: 50px;
			font-family: Courier New;
		}
		
		.row1 {
			height: 50px;
			font-family: Courier New;
		}
		
		.row2 {
			height: 50px;
			font-family: Courier New;
		}
		
		.row3 {
			height: 50px;
			font-family: Courier New;
			margin-top: -2px;
		}
		
		.topPanel {
			margin-top: 5px;
			margin-bottom: 15px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="container">
		<g:VerticalPanel width="100%">
			<g:HorizontalPanel width="100%" styleName="{style.row0}" height="" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<my:KeyButton styleName="{style.key} gwt-Button" text="~" width="100%" height="50px" keyCode="{~}" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="!" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="@" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="#" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="$" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="%" width="100%" height="50px" keyCode="{%}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text="^" width="100%" height="50px" keyCode="{^}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text="&amp;" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="*" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="?" width="100%" height="50px" />
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" styleName="{style.row0}" height="" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<my:KeyButton styleName="{style.key} gwt-Button" text="(" width="100%" height="50px" keyCode="{(}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text=")" width="100%" height="50px" keyCode="{)}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text="_" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="=" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="[" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="]" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="{" width="100%" height="50px" keyCode="{{}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text="}" width="100%" height="50px" keyCode="{}}"/>
				<my:KeyButton styleName="{style.key} gwt-Button" text=";" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text=":" width="100%" height="50px" />
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" styleName="{style.row0}" height="" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<my:KeyButton styleName="{style.key} gwt-Button" text="'" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="&quot;" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="\" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="|" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="," width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="&lt;" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="." width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="&gt;" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="/" width="100%" height="50px" />
				<my:KeyButton styleName="{style.key} gwt-Button" text="BACK" width="100%" height="50px" keyCode="{kc.VK_BACK_SPACE}"/>
			</g:HorizontalPanel>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel height="" horizontalAlignment="ALIGN_CENTER"
				styleName="{style.row3}" verticalAlignment="ALIGN_MIDDLE" width="100%">
				<my:KeyToggleButton height="35px" text="CTRL" width="80%" keyCode="{kc.VK_CONTROL}"/>
				<my:KeyToggleButton height="35px" text="WIN" width="80%" keyCode="{kc.VK_WINDOWS}"/>
				<my:KeyToggleButton height="35px" text="ALT" width="80%" keyCode="{kc.VK_ALT}"/>
				<my:KeyButton height="43px" styleName="{style.key} gwt-Button" text="SPACE" width="100%" keyCode="{kc.VK_SPACE}"/>
				<my:KeyToggleButton height="35px" text="RALT" width="82%" keyCode="{kc.VK_ALT}"/>
				<my:KeyToggleButton height="35px" text="APP" width="80%" keyCode="{kc.VK_CONTEXT_MENU}"/>
				<my:KeyToggleButton height="35px" text="CTRL" width="80%" keyCode="{kc.VK_CONTROL}"/>
				<my:KeyButton height="43px" styleName="{style.key} gwt-Button" text="ENTER" width="100%" keyCode="{kc.VK_ENTER}"/>
			</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 