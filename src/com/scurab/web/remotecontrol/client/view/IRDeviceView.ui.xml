<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.label
	{
		font-size: 1.5em;
		color: #FFF;
		padding-top: 15px;
		padding-bottom: 15px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="100%" height="100%">
			<g:Label text="New Label" ui:field="lblName" styleName="{style.label}"/>
			<g:FlowPanel ui:field="container"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 