<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.scurab.web.remotecontrol.client.controls">
	<ui:style>
	.btn 
	{
		min-height: 50px;
		max-width: 60px;
		text-align: center;		
	}
	.btn2 
	{
		min-height: 66px;
	}		
	</ui:style>
	<g:HorizontalPanel width="100%">
		<g:Cell width="60px">
			<g:HTMLPanel styleName="gwt-Button {style.btn}">
<!-- 			<g:Button ui:field="btnContext" text="^" styleName="{style.btn} gwt-Button" width="100%" /> -->
				<p1:ImageMobileButton altText="." ui:field="btnContext"/>
			</g:HTMLPanel>
		</g:Cell>
		<g:Cell width="100%">
			<g:Button ui:field="btnItem" text="." styleName="{style.btn2} gwt-Button" width="100%" />
		</g:Cell>
		
	</g:HorizontalPanel>
</ui:UiBinder> 