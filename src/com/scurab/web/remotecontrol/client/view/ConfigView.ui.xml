<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.scurab.web.remotecontrol.language.Words" field="res"/>
	<ui:style>
	.label
	{
		font-size: 1.5em;
		color: #FFF;
		padding-top: 15px;
		padding-bottom: 15px;
	}
	.item
	{
		width: 100%;
		font-size: 2em;
	}
	
	.bottom
	{
		margin-top: 20px;
	}
	</ui:style>
	<g:VerticalPanel>
		<g:Label text="{res.PIN}" width="100%" styleName="{style.label}"/>
		<g:TextBox width="100%" ui:field="txtPIN" styleName="{style.item}"/>
		<g:Label text="{res.TVApplication}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbTV" styleName="{style.item}"/>
		<g:Label text="{res.VideoPlayer}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbVideoPlayer" styleName="{style.item}"/>
		<g:Label text="{res.AudioPlayer}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbAudioPlayer" styleName="{style.item}"/>
		<g:Label text="{res.PicturesViewer}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbPictureViewer" styleName="{style.item}"/>
		<g:Label text="{res.MediaCenter}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbMediaCenter" styleName="{style.item}"/>
		<g:Label text="{res.IRDevice}" width="100%" styleName="{style.label}"/>
		<g:ListBox width="100%" ui:field="cmbIRDevices" styleName="{style.item}"/>
		<g:HorizontalPanel styleName="{style.bottom}" width="100%">
			<g:Button ui:field="btnFavorites" text="{res.Favorities}" width="100%" height="50px"/>
			<g:Button ui:field="btnSave" text="{res.Save}" width="80%" height="50px"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 